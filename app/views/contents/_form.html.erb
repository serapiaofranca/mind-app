<% if content.errors.any? %>
    <div class='errors'>
        Errors:  <%= content.errors.full_messages.join(", ") %>
        <BR><BR>
    </div>    
<% end %>

<%= form_with(model: content, local: true) do |form|%>
    <div class='field'>
        <%= form.label :title%>
        <%= form.text_field :title %>
    </div>
    <div class='field'>
        <%= form.label :description %>
        <%= form.text_area :description %>
    </div>

    <div>
        <%= form.submit %>
    </div>
<% end %>